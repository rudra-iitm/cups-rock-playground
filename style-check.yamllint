extends: default

rules:
  # Set the line length to 120
  line-length:
    max: 120
  # Require a new line at the end of the file
  new-line-at-end-of-file:
    present: true
  # Check for trailing spaces
  trailing-spaces:
    level: error
  # Enforce indentation
  indentation:
    spaces: 2
  # Ensure comments are properly formatted
  comments:
    required: true